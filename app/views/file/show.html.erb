<h1>List of All Snippets</h1><br />
<h2>Snippets</h2>

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          
          <!-- /.panel-heading -->
          <div class="panel-body">
              <div class="table-responsive">
                  <table id="requests" class="table table-hover">
                      <thead>
                          <tr>
                              <th>Snippet Title</th>                              
                              <th></th>
                          </tr>
                      </thead>
                      <tbody>
                          <% @snippets.each do |snippet| %>
                            <tr>
                              <td><%= snippet.title %></td>
                              <td>
                                  <%= button_to "Show History",
                                                history_file_index_path(snippet),
                                                method: :get,                                                
                                                :class => 'btn btn-success btn-small'
                                  %>                                  
                              </td>
                            </tr>
                          <% end %>
                      </tbody>
                  </table>
              </div>
              <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
  </div>
</div>
 

