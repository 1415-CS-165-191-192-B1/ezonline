%h1 Authorized Users
%br/
.row
  .col-lg-12
    .panel.panel-default
      / /.panel-heading
      .panel-body
        .table-responsive
          %table#show.table.table-hover
            %thead
              %tr
                %th Username
                %th Email Address
                %th Admin Account
            %tbody
              - @users.each do |user|
                %tr
                  %td= user.username
                  %td= user.email
                  %td
                    - if user.admin
                      %img{:alt => "rss feed", :height => "20/", :src => "/assets/check.png"}/
                    - else
                      %img{:alt => "rss feed", :height => "20/", :src => "/assets/cross.png"}/
                  %td
                    - unless user.user_id.to_s == @current_user_id or user.admin
                      = button_to "Unauthorize",
                        unauthorize_user_path(user.user_id),
                        :method => :get,
                        :data => { confirm: 'Unauthorize this user?' },
                        :class => 'btn btn-success btn-small'