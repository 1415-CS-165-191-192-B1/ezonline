<h1>List of All Users</h1><br />
<!--<h2>Users</h2>-->

<div class="row">
  <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
          Authorized Users
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
              <div class="table-responsive">
                  <table class="table table-hover">
                      <thead>
                          <tr>
                              <th>User ID</th>
                              <th>Username</th>
                              <th>Email Address</th>
                              <th>Admin Account</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% @users.each do |user| %>
                            <tr>
                              <td><%= user.user_id %></td>
                              <td><%= user.username %></td>
                              <td><%= user.email %></td>
                              <td><%= user.admin %></td>
                            </tr>
                          <% end %>
                      </tbody>
                  </table>
              </div>
              <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
  </div>
</div>


